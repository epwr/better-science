package graphs_test

import (
	"testing"

	graphs "github.com/epwr/better-science/internal/graphs"
)

type TestPayload struct {
	data string
}

func TestAddANodeToAGraph(t *testing.T) {

	g := graphs.NewGraph[string, TestPayload]()
	payload := TestPayload{data: "test data"}

	g.AddNode("node1", payload)

	assertTrue(t, g.GetNodeCount() == 1, "AddNode does not add exactly one node to Graph.")
}

func TestAddAnEdgeBetweenTwoNodes(t *testing.T) {

	g := graphs.NewGraph[string, TestPayload]()
	payload := TestPayload{data: "test data"}
	g.AddNode("node1", payload)
	g.AddNode("node2", payload)

	g.AddEdge("node1", "node2")

	assertTrue(t, g.GetPathLength("node1", "node2") == 1, "AddEdge does not create an edge between the two nodes")
}
